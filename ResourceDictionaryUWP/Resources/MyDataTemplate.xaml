<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="ResourceDictionaryUWP.Resources.MyDataTemplate"
    xmlns:local="using:ResourceDictionaryUWP.Resources">


    <DataTemplate x:Key="ProductDetailsContentTemplate">
        <StackPanel Orientation="Vertical" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="SubtractQytyButton" Grid.Column="0" Content="-" FontSize="24" HorizontalAlignment="Stretch"
                           FontWeight="ExtraBold"
                            Click="SubQytyButton_Click"/>
                <TextBox x:Name="MyTextBox" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="24" Margin="5,0"
                             MaxLength="5" TextAlignment="Center"/>
                <Button  x:Name="AddQytyButton" Grid.Column="2" Content="+" FontSize="24" HorizontalAlignment="Stretch"
                             Margin="5,0" FontWeight="ExtraBold"
                             Click="AddQytyButton_Click"/>
            </Grid>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
